{
  "manifest_version": 3,
  "name": "GLoSS",
  "version": "1.0.0",
  "description": "Glossary Lookup of Software & Systems terms (GLoSS)",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GLoSS Bookmarks",
    "default_icon": {
      "128": "glossy_blue_128.png"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["src/content.tsx"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": ["glossary.json", "styles.css"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "128": "glossy_blue_128.png"
  }
}
