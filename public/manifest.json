{
  "manifest_version": 3,
  "name": "GLoSS",
  "version": "1.0",
  "description": "Glossary Lookup of Software & Systems terms (GLoSS)",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GLoSS Bookmarks"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.tsx"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["glossary.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
